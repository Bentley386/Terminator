@model TerminiDostave.Models.TermModel
@{
    ViewBag.Title = "Podrobnosti";
}

<h2>Podrobnosti termina:</h2>
@{ 
    if (!Request.IsAuthenticated)
    {
    <p>
        Ker niste prijavljeni, lahko morebitnim spremembam sledite le preko naslednje povezave: <a id="link"></a>
        <script> 
            var l = document.getElementById("link");
            var href = window.location.href;
            l.innerHTML = href;
            l.href = href;
        </script>
    </p>
    }
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Company)
