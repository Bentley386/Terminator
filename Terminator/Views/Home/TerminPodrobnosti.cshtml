<p>
    <a class="btn btn-primary btn-md" href="javascript:window.print()">Natisni</a>

    @{
        if (User.IsInRole("Skladiscnik"))
        {
            @Html.ActionLink("Dodaj Opombo", "TerminUredi", new { TrackingNumber = Model.TrackingNumber }, new { @class = "btn btn-warning btn-md" })
            <span>  </span>
            @Html.ActionLink("Potrdi", "TerminPotrdi", new { TrackingNumber = Model.TrackingNumber }, new { @class = "btn btn-success btn-md" })
            <span>  </span>
            @Html.ActionLink("Zavrni", "TerminZavrni", new { TrackingNumber = Model.TrackingNumber }, new { @class = "btn btn-danger btn-md" })

        }
        if (User.IsInRole("Administrator"))
        {
            @Html.ActionLink("Uredi", "TerminUredi", new { TrackingNumber = Model.TrackingNumber }, new { @class = "btn btn-primary btn-md" })
            <span>  </span>
            @Html.ActionLink("Izbriši", "TerminIzbrisi", new { TrackingNumber = Model.TrackingNumber }, new { @class = "btn btn-danger btn-md" })

        }
